# ==============================================
#  Dockge 共用變數 (用於 Docker Compose 檔案)
# ==============================================
# 請務必設定強密碼，這會同時用在資料庫容器與後端連線
DB_PASSWORD=請在此輸入您的資料庫密碼
DB_ROOT_PASSWORD=請在此輸入您的Root密碼

# ==============================================
#  後端應用程式設定 (Core Settings)
# ==============================================

# [安全性] 請務必修改為一長串隨機亂碼 (可用 `openssl rand -hex 32` 生成)
SECRET_KEY="請務必修改這裡_CHANGE_THIS_TO_RANDOM_STRING"

# [資料庫連線] 設定為 MySQL (配合 docker-compose.prod.yml 的設定)
# 注意：這裡使用變數 ${DB_PASSWORD} 引用上面的設定，方便管理
SQLALCHEMY_DATABASE_URL=mysql+aiomysql://prod_user:${DB_PASSWORD}@db/app_db

# JWT 設定 (保持預設即可)
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ==============================================
#  初始管理員帳號 (Admin Account)
# ==============================================
# 系統第一次啟動時會自動建立此帳號
FIRST_SUPERUSER="admin@example.com"
FIRST_SUPERUSER_PASSWORD="請修改您的管理員密碼"

# ==============================================
#  一般設定 (General Settings)
# ==============================================

# [生產環境] 務必設為 False
DEBUG=False

# 上傳檔案路徑 (對應容器內路徑)
UPLOAD_DIR="uploads"

# [網域設定 - 重要]
# 請填入您在 Nginx Proxy Manager 設定的「對外 HTTPS 網址」
# 例如: https://dorm.yourdomain.com
API_BASE_URL="https://您的網域.com"

# [CORS 設定 - 重要]
# 必須包含上面的網址，格式為 JSON list (注意引號與中括號)
BACKEND_CORS_ORIGINS='["https://您的網域.com", "http://localhost:3000"]'

# ==============================================
#  郵件設定 (Email Settings)
# ==============================================
# 若需要「忘記密碼」或「通知信」功能，請填入真實 SMTP 資訊 (如 Gmail)
# 若暫不使用，可留空，但相關功能會失效
MAIL_USERNAME=""
MAIL_PASSWORD=""
MAIL_FROM="noreply@您的網域.com"
MAIL_PORT=587
MAIL_SERVER="smtp.gmail.com"
MAIL_TLS=True
MAIL_SSL=False

# 專案資訊
PROJECT_NAME="Dormitory Inspection System"
PROJECT_VERSION="1.0.0"
API_V1_STR="/api/v1"
NODE_ENV="production"
